{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "payments"
    },
    "pay_amount": {
      "type": "biginteger",
      "required": true
    },
    "pay_transaction": {
      "required": false,
      "type": "biginteger"
    },
    "pay_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "success",
        "failed"
      ]
    }
  }
}
